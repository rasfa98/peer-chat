{{>flash}}

<form action="/login" method="post">
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <input class="input" type="email" placeholder="Enter email" name="email">
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <input class="input" type="password" placeholder="Enter password" name="password">
    </div>
  </div>

  <div class="field">
    <div class="control">
      <button type="submit" class="button is-link is-primary">Login</button>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <a class="button is-link is-warning" href="/auth/google">Login with Google</a>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <a class="button is-link is-info" href="/auth/facebook">Login with Facebook</a>
    </div>
  </div>

  <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>